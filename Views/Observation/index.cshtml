@model IEnumerable<Full_Stack_Gruppe_3.Models.Observation>

@{
    ViewData["Title"] = "Observations";
}

<h2>Observations</h2>

<!-- Meny for å navigere til andre sider -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Værmelding</a>
</nav>

@if (Model != null && Model.Any())
{
    <p>Number of observations: @Model.Count()</p>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temperature (°C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var observation in Model)
            {
                <tr>
                    <td>@observation.Date.ToString("yyyy-MM-dd")</td>
                    <td>@observation.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No observations available.</p>
}
