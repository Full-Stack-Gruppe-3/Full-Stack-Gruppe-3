@model IEnumerable<Full_Stack_Gruppe_3.Models.WeatherForecast>

<!DOCTYPE html>
<html>
<head>
    <title>Weather Forecast</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Weather Forecast</h1>
        <p>
            <a href="@Url.Action("Create", "WeatherForecast")" class="btn btn-primary">Create New</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Temperature (°C)</th>
                    <th>Comment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var forecast in Model)
                {
                    <tr>
                        <td>@forecast.Date.ToShortDateString()</td>
                        <td>@forecast.Temperature</td>
                        <td>@forecast.Comment</td>
                        <td>
                            <a href="@Url.Action("Details", "WeatherForecast", new { id = forecast.Id })" class="btn btn-info">Details</a>
                            <a href="@Url.Action("Edit", "WeatherForecast", new { id = forecast.Id })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "WeatherForecast", new { id = forecast.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
