@model Full_Stack_Gruppe_3.Models.WeatherForecast

<!DOCTYPE html>
<html>
<head>
    <title>Delete Weather Forecast</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Delete Weather Forecast</h1>
        <h3>Are you sure you want to delete this forecast?</h3>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Temperature"></label>
                <input asp-for="Temperature" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Comment"></label>
                <input asp-for="Comment" class="form-control" readonly />
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
